<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un nouveau bien"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Type du bien -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type du bien" />

        <Spinner
            android:id="@+id/spinnerTypeBien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/types_bien"/>

        <!-- Rue -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rue"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/editTextRue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rue"/>

        <!-- Code Postal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code Postal"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/editTextCodePostal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Code Postal"
            android:inputType="number"/>

        <!-- Ville -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/editTextVille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ville"/>

        <!-- Bouton de création -->
        <Button
            android:id="@+id/buttonCreateBien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer le bien"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
